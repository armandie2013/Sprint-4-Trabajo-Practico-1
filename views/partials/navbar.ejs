<nav class="bg-black px-6 py-2">
    <div class="flex items-center justify-between">
      <!-- Logo a la izquierda -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/images/logo.png" alt="logo" class="h-8 w-auto">
      </a>
  
      <!-- Links a la derecha -->
      <ul class="flex items-center space-x-6">
        <% navbarLinks.forEach(link => { %>
          <li>
            <a href="<%= link.href %>" class="flex items-center text-white hover:text-gray-300 transition-colors">
              <img src="<%= link.icon %>" alt="<%= link.text %> Icono" class="h-5 w-5 mr-2">
              <span><%= link.text %></span>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  </nav>